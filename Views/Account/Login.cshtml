@model WebApplication1.Models.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span> <!-- Błędy walidacji dla Email -->
    </div>

    <div class="form-group">
        <label for="Password">Hasło</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span> <!-- Błędy walidacji dla Password -->
    </div>


    <button type="submit" class="btn btn-primary">Zaloguj się</button>
</form>

<div>
    <p>Nie masz konta? <a href="@Url.Action("Register", "Account")">Zarejestruj się</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
